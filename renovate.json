{
  "extends": ["config:base"],
  "enabledManagers": ["dockerfile", "regex"],
  "dockerfile": {
    "pinDigests": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["werf\\.yaml$"],
      "matchStrings": [
        "^\\s*from:\\s*(?<depName>[^:]+)(:(?<currentValue>[^@\\s]+))?\\s*$"
      ],
      "depNameTemplate": "{{depName}}",
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker",
      "extractVersionTemplate": "{{{currentValue}}}@{{{digest}}}"
    }
  ]
}
